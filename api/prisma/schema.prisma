generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum VerificationStatus {
  UNVERIFIED
  AUDITING
  VERIFIED
  REJECTED
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  MARGIN
  FEE
  LIQUIDATION
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BANNED
}

model User {
  id        String   @id @default(cuid())
  uid       Int?     @default(0)
  email     String   @unique
  password  String
  status    UserStatus @default(ACTIVE)
  availableFunds Int @default(0)
  verificationStatus VerificationStatus? @default(UNVERIFIED)
  emailVerified Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  trades Trade[]
  transactions Transaction[]
}

model VerificationCode {
  id String @id @default(cuid())
  email String @unique
  code String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

enum TradeDirection {
  BUY
  SELL
}

enum TradeStatus {
  OPEN
  CLOSED
  CANCELLED
}

model Trade {
  id String @id @default(cuid())
  userId String
  user User @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  transactionPairs String
  reservationNumber String
  direction TradeDirection
  lots Float
  lowerUnitPrice Float
  currentPrice Float?
  handlingFee Float
  margin Float?
  profit Float?
  openTime DateTime?
  closeTime DateTime?
  status TradeStatus
}

model Transaction {
  id String @id @default(cuid())
  userId String
  user User @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  quantity Float
  type TransactionType
}
